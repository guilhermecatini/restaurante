extends layout


block content
    include menu.pug
    style.
        #containereditor {
            //- position: absolute;
            //- left: 0;
            //- top: 0;
            width: 100%;
            height: 400px;
            //- margin: 0;
            //- padding: 0;
            //- overflow: hidden;
        }   
    .container(data-ng-app="scriptform")
        input#code(type="text" name="code")
        .row(data-ng-controller="scriptformcontroller")
            .col-12
                //- | #{JSON.stringify(data)}
                .mb-2
                    label(for="short_description") Short Description
                    input.form-control#short_description(name="short_description" data-ng-model="fd.short_description")
                .mb-2
                    label(for="description") Description
                    textarea.form-control#description(name="description" rows="5" data-ng-model="fd.description")
                .mb-2
                    label(for="codefield") Code Snippet
                    div#containereditor
                .mb-2
                    hr
                    button.btn.btn-sm.btn-primary#save(type="button" data-ng-click="saveRecord()") Save
    script(src="/scripthelp_form.js")