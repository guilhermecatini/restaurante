extends layout


block content
    include menu.pug
    style.
        #containereditor {
            width: 100%;
            height: 400px;
        }
    .container(style="margin-top: 15px")
        .row
            form(name="scripthelp_form" action="/cat/nav/ui/classic/scripthelp" method="POST" onsubmit="return onSubmit()")
                input#script(type="hidden" name="script" value=data.script)
                input#script(type="hidden" name="id" value=data.id)
                .col-12
                    .mb2.text-end
                        .btn-group
                            button.btn.btn-sm.btn-dark#save(type="submit") Save
                            button.btn.btn-sm.btn-primary#back(type="button" onclick="window.location.href='/cat/nav/ui/classic/scripthelp_list'") Back
                    .mb-2
                        label(for="short_description") Short Description
                        input.form-control#short_description(name="short_description" value=data.short_description)
                    .mb-2
                        label(for="description") Description
                        textarea.form-control#description(name="description" rows="5")
                            =data.description
                    .mb-2
                        label(for="codefield") Code Snippet
                        div#containereditor
    script(src="/scripthelp_form.js")